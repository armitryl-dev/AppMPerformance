<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/backgroundbmw3"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Contacto">

    <TextView
            android:text="@string/contacto"
            android:textColor="@color/white"
            android:fontFamily="@font/exo2_regular"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewContacto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="85dp"/>

    <ImageView
            android:src="@drawable/mperfomancelogo"
            android:id="@+id/imageView2"
            android:layout_width="116dp"
            android:layout_height="86dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="25dp"
            app:layout_constraintHorizontal_bias="0.5"/>
    <ImageView
            android:src="@drawable/telephone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageViewTelefono"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textViewTelefono"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="140dp"/>

    <ImageView
            android:src="@drawable/email"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageViewEmail"
            app:layout_constraintEnd_toStartOf="@+id/textViewEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/imageViewTelefono"
            android:layout_marginTop="8dp"/>

    <TextView
            android:text="+34 636 34 84 55"
            android:textColor="@color/white"
            android:fontFamily="@font/exo2_regular"
            android:textSize="30dp"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/textViewTelefono"
            android:background="@drawable/rounded_item_background"
            app:layout_constraintTop_toBottomOf="@+id/textViewContacto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.801"/>

    <TextView
            android:text="rclientes@bmw.es"
            android:textColor="@color/white"
            android:fontFamily="@font/exo2_regular"
            android:textSize="30dp"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/textViewEmail"
            android:background="@drawable/rounded_item_background"
            app:layout_constraintTop_toBottomOf="@+id/textViewTelefono"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.8"/>

    <ImageView
            android:src="@drawable/location"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageViewLocation"
            app:layout_constraintTop_toBottomOf="@+id/imageViewWhatsApp"
            app:layout_constraintEnd_toStartOf="@+id/textViewUbicacion"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
            android:text="Madrid"
            android:textColor="@color/white"
            android:fontFamily="@font/exo2_regular"
            android:textSize="30dp"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/textViewUbicacion"
            android:background="@drawable/rounded_item_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.801"
            app:layout_constraintTop_toBottomOf="@+id/textViewWhatsApp"
            android:layout_marginTop="8dp"/>

    <ImageView
            android:src="@drawable/ubicacion"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:id="@+id/imageViewUbicacion"
            app:layout_constraintTop_toBottomOf="@+id/textViewUbicacion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintVertical_bias="0.40"/>
    <ImageView
            android:src="@drawable/whatsapp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageViewWhatsApp"
            app:layout_constraintEnd_toStartOf="@+id/textViewWhatsApp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewEmail"
            android:layout_marginTop="5dp"
            app:layout_constraintVertical_bias="30"
            app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:text="@string/whatsapp"
            android:textColor="@color/white"
            android:fontFamily="@font/exo2_regular"
            android:textSize="30dp"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/textViewWhatsApp"
            android:background="@drawable/rounded_item_background"
            app:layout_constraintTop_toBottomOf="@+id/textViewEmail"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.8"/>


</androidx.constraintlayout.widget.ConstraintLayout>